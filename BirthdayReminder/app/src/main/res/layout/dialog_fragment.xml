<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="350dp"
    android:minWidth="300dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/f" />

    <LinearLayout style="@style/dialog_layoutview">

        <TextView
            android:id="@+id/tv_firstname_field"
            style="@style/dialog_textview_field"
            android:text="First Name : "></TextView>

        <TextView
            android:id="@+id/tv_firstname_value"
            style="@style/dialog_textview_value"
            android:text="Default Name" />
    </LinearLayout>

    <LinearLayout style="@style/dialog_layoutview">

        <TextView
            android:id="@+id/tv_lastname_field"
            style="@style/dialog_textview_field"
            android:text="Last Name : " />

        <TextView
            android:id="@+id/tv_lastname_value"
            style="@style/dialog_textview_value"
            android:text="N/A" />
    </LinearLayout>

    <LinearLayout style="@style/dialog_layoutview">

        <TextView style="@style/dialog_textview_field"
            android:text="Date of Birth : " />

        <TextView
            android:id="@+id/tv_birthday"
            style="@style/dialog_textview_value"
            android:text="01.01.1990" />
    </LinearLayout>

    <LinearLayout style="@style/dialog_layoutview">

        <TextView style="@style/dialog_textview_field"
            android:text="Ideas for gift :" />

        <TextView style="@style/dialog_textview_value"
            android:id="@+id/tv_giftideas"
            android:text=" Maybe some art?" />
    </LinearLayout>

    <Button

        style="@style/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send  SMS"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:onClick="GoToMessages"/>
</LinearLayout>
